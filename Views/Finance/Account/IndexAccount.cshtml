@using ProjetoMvc.Models.Entities.Payment
@using ProjetoMvc.Models.ViewModel

@model FinanceViewModel

@{
    ViewData["Title"] = "IndexAccount";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Lista de Contas</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus"></i> Adicionar Conta
        </a>
    </div>

    <table class="table table-striped table-bordered shadow-sm bg-light">
        <thead class="table-dark">
            <tr>
                <th style="width: 60%;">Nome</th> <!-- Nome ocupa mais espaço -->
                <th>Status</th>
                <th class="text-center" style="width: 20%;">Ações</th> <!-- Ações com largura fixa -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Accounts)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@(item.Status == ProjetoMvc.Models.Enum.AtivoInativoEnum.Active ? "Ativo" : "Inativo")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-controller="Finance"
                           asp-action="AccountDetails"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-info">
                            Detalhes
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Voltar Button -->
    <div class="text-center mt-4">
        <a asp-controller="Finance"
           asp-action="IndexCard"
           class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>
    </div>
</div>
