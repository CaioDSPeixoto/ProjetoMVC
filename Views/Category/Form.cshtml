@using ProjetoMvc.Models.Entities.ToDo
@using ProjetoMvc.Models.Enum

@model Category

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="Title">Titulo</label>
        <input asp-for="Title" type="text" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Status</label>
        @Html.DropDownListFor(
                 model => model.Status,
                 new SelectList(Enum.GetValues(typeof(AtivoInativoEnum))),
                 "-- Selecione --",
                 new { @class = "form-control" })
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-sm mt-3">Salvar</button>
</form>
