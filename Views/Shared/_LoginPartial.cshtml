<div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ms-auto">
        @if (Context.User.Identity.Name != null)
        {
            <li class="nav-item me-3">
                <span class="nav-link">Olá, <strong>@Context.User.Identity.Name</strong>!</span>
            </li>
            <li class="nav-item">
                <form asp-controller="User" asp-action="LogOut" method="post" id="logoutForm" class="d-inline">
                    <button type="submit" class="btn btn-link nav-link">Sair</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Registration">Criar Conta</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Login">Entrar</a>
            </li>
        }
    </ul>
</div>