@using ProjetoMvc.Models.Entities.ToDo

@model Todo

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<form method="post">

    <div class="form-group">
        <label asp-for="Title">Titulo</label>
        <input asp-for="Title" type="text" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Descrição</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeadLine">Data de finalização (entrega)</label>
        <input asp-for="DeadLine" type="datetime-local" class="form-control" required />
        <span asp-validation-for="DeadLine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="AssignedToUserId">Atribuir a</label>
        <select asp-for="AssignedToUserId" class="form-control" asp-items="ViewBag.Users">
            <option value="">Todos</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Categoria</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">Selecione uma categoria</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-sm mt-3">Salvar</button>
</form>
